<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ConfiguracionActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="30dp"
            android:id="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:src="@drawable/logo"
                    android:id="@+id/imageView" android:layout_gravity="center|start"/>
            <TextView
                    android:text="Configuración"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="@color/textColor"
                    android:fontFamily="sans-serif-light" android:layout_weight="1"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    android:id="@+id/buttonRegresar"
                    android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/colorSecond"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:paddingTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <TextView
                android:text="Notificaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="10dp" android:textColor="@color/textColor"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/textColor"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp"
        />
        <TextView
                android:text="Contraseña"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="10dp" android:textColor="@color/textColor"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/textColor"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp"
        />
        <TextView
                android:text="Privacidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="10dp" android:textColor="@color/textColor"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/textColor"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp"
        />
        <TextView
                android:text="Política de datos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="10dp" android:textColor="@color/textColor"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/textColor"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp"
        />
        <TextView
                android:text="Acerca de nosotros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="10dp" android:textColor="@color/textColor"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/textColor"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp"
        />
        <TextView
                android:text="Compartir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="10dp" android:textColor="@color/textColor"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/textColor"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp"
        />
        <TextView
                android:text="Cerrar sesión"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="10dp" android:textColor="@color/textColor"
                android:textStyle="bold"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/textColor"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp"
        />
        <Space
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/textColor"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp"
        />
        <TextView
                android:text="Eliminar cuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="10dp"
                android:textColor="@android:color/holo_red_dark" android:textStyle="bold"
        />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/textColor"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp"
        />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>